<!--notice-->
<i-notice-bar icon="systemprompt" loop>
   {{noticeText}}
</i-notice-bar>
<!-- content -->
<view class="container">
	<!-- banner -->
	<swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="2000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
	  <swiper-item wx:for="{{swiperList}}" wx:key="index" class="{{cardCur==index?'cur':''}}">
	    <view class="swiper-item">
	      <image src="{{item.imgUrl}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
	      <video src="{{item.imgUrl}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
	    </view>
	  </swiper-item>
	</swiper>
	<!-- 分类 -->
	<view class="tabs">
		<i-tabs current="{{ current_scroll }}" scroll bindchange="handleChangeScroll">
		    <i-tab  wx:for="{{$data.dataRecord.tabData}}" key="tab{{index+1}}" wx:key="index" title="{{item.name}}" ></i-tab>
		</i-tabs>
	</view>
	<!-- iview weapp 组件示例 -->
	<i-button bind:click="handleClick" type="success" open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo" style="margin-top:20px;">授权</i-button>
	<!-- 微信官方组件示例 -->
	<button type="warn" size="default" bindtap="isGetSetting">检查是否授权</button>
	<button open-type="contact">打开客服</button>
</view>